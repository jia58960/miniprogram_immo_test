                            <text class="normal" bindtap="bindPlus">+</text>
                      </view>
                    </view>
                </view>
                <view class="weui-cell" style="font-size:15px">
                    <view>联系人</view>
                    <view style="margin-left:35px">刘东强</view>
                </view>
                <view class="weui-cell" style="font-size:15px">
                    <view>手机号</view>
                    <view style="margin-left:35px">1836741936</view>
                </view>
                <view class="weui-cell" style="font-size:15px">
                    <view>地址</view>
                    <view style="margin-left:50px">山西省太原市洪山区22号</view>
                </view>
            </view>
        </view>

        <view class='bottomCont'>
            <view class='bottomContL'>
            订单金额:¥48.00
            </view>
            <view class='bottomContR' bindtap='toPay'>立即支付</view>
         </view>

