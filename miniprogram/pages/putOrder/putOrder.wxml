<view class="page" data-weui-theme="{{theme}}" >

    <view class="page__bd">
        <view class="weui-panel__hd" style="background:white"> 
            <view>IMMO防盗模块</view>
              <view style="font-size:13px; color:#8a8a8a; margin-top:10px; font-weight:200">
              <view style="padding-bottom:5px">电压：12V主板供电</view>
              <ul>
